<title><%- title%></title>
<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-2" style="margin-top: 46px; margin-left: 26%;">
            <div class="card">
                <div class="card-header">Reset Password</div>

                <div class="card-body">
                    
                    <% if (message != '') {%>
                        <div class="alert alert-danger">
                            <%-message%>
                        </div>
                    <% } %>

                    <form class="form-horizontal" method="POST" action="">

                        <div class="form-group">
                            <label for="email" class="col-md-4 control-label">Tên tài khoản</label>
                            <div class="col-md-12">
                                <input id="username" type="text" class="form-control" name="username" placeholder="Nhập tên tài khoản" required>
                            </div>
                        </div>

                        <div class="form-group" style="margin-top: 20px;">
                            <div class="col-md-6 col-md-offset-4">
                                <button type="submit" class="btn btn-success">
                                    Send Password Reset Link
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>