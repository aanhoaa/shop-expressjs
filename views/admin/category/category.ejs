
<% include ../../partials/header_admin %>

<div style="margin-left: 5%;">
    <div class="col-lg-12">
        <h1 class="page-header">Category
            <small>List</small>
            <div style="float: right;">
                <a href="{!! url('admin/category/add') !!}" class="btn btn-success" style="font-size: 18px;"><i class="fas fa-plus-square" style="margin-right: 5px;"></i> Thêm mới danh mục</a>
            </div>
        </h1>
    </div>
   
    <!-- /.col-lg-12 -->
    <table id="dataTables-example" class="mdl-data-table" style="width:100%">
        <thead>
            <tr align="center">
                <th>ID</th>
                <th>Mã danh mục</th>
                <th>Tên danh mục</th>
                <th>Category Parent</th>
                <th>Mô tả</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
           <% data.forEach((cate)=>{
               if (cate['childCateName'] != '')
                {
                    cate['childCateName'].forEach((child)=> {
                
            %>
           
            <tr class="odd gradeX" align="center">
                <td></td>
                <td></td>
                <td><%-child.childName%></td>
                <td>
                   <%- cate.name %>
                </td>
                <td></td>
                <td class="center">
                    <div class="btn-group">
                        <a href="/admin/category/edit/<%-cate._id%>/<%-child._id%>" class="btn btn-warning"><i class="fas fa-edit"></i> Edit</a>
                        <a href="/admin/category/delete/<%-cate._id%>/<%-child._id%>" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                    </div>
                </td>
            </tr>
            <% })}})%>
        </tbody>
    </table>
</div>

<% include ../../partials/footer_admin %>