<% include ../../partials/header_seller %>
<div class="category-link">
    <a href="/seller">Trang chủ</a> >
    <span>Chi tiết sản phẩm</span>
</div>
<div style="margin-left: 5%;">
    <div class="col-lg-12">
        <h1 class="page-header">Product
            <small>Detail</small>
        </h1>
    </div>
    <!-- /.col-lg-12 -->
    <table id="dataTables-example" class="mdl-data-table" style="width:100%">
        <thead>
            <tr align="center">
                <th>STT</th>
                <th>Tên Sản phẩm</th>
                <th>SKU</th>
                <th>Phân loại hàng</th>
                <th>Giá</th>
                <th>Kho hàng</th>
                <th>Rộng, Dài, Cao (cm) - Trọng lượng(gr)</th>
            </tr>
        </thead>
        <tbody>
           <%if (data) {
               var i = 0;
               data.forEach(item => {i++;
            %>
            <tr class="odd gradeX" align="center">
                <input type="text" value="<%-item.id%>" hidden name="id" id="id">
                <td><%-i%></td>
                <td><div class="name-wrap-text"><p><%-item.name%></p></div></td>
                <td>
                    <div class="form-group edit-variant">
                        <input type="text" class="form-control" id="sku" 
                        onkeypress="changeVariant()"
                        value="<%-item.sku == '' ? '--': item.sku%>" name="sku"/>  
                    </div>
                </td>
                <td>
                    <div class="name-wrap-text"><p><%-item.attribute.Color%>, <%-item.attribute.Size%></p></div>
                </td>
                <td>
                    <div class="form-group edit-variant">
                        <input class="form-control gia_ban" id="price" placeholder=" Enter Product Price" 
                       id="price" name="price"
                        value="<%-item.price%>" type="number" onkeypress="changeVariant()"/>  
                    </div>
                </td>
                <td>
                    <div class="form-group edit-variant">
                        <input class="form-control" id="stock" name="stock"
                        value="<%-item.stockamount%>" type="number" onkeypress="changeVariant()" required/>  
                    </div>
                </td>
                <td>
                    <div style="display: flex;">
                        <div>
                            <input class="form-control pdv-detail" id="width" name="width"
                            value="<%-item.w%>" type="number" onkeypress="changeVariant()" required/>
                        </div>
                        <div>
                           
                            <input class="form-control pdv-detail" id="length" name="length"
                            value="<%-item.l%>" type="number" onkeypress="changeVariant()" required/>
                        </div>
                        <div>
                            <input class="form-control pdv-detail" id="height" name="height"
                            value="<%-item.h%>" type="number" onkeypress="changeVariant()" required/>
                        </div>
                        <div>
                            <input class="form-control pdv-detail" id="weight" name="weight"
                            value="<%-item.weight%>" type="number" onkeypress="changeVariant()" required/>
                        </div>
                    </div>
                </td>
            </tr>
           <%})}%>
        </tbody>
    </table>
    <div class="btn-update" style="display: none;">
        <a href="" class="btn btn-warning" onclick="updateVariant()">
            <i class="fas fa-edit"></i> Update
        </a>
    </div>
</div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script src="/javascripts/js/admin/changeInfoVariant.js"></script>
<% include ../../partials/footer_admin %>