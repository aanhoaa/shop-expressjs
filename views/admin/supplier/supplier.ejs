    <table id="dataTables-example" class="mdl-data-table" style="width:100%">
        <thead>
            <tr align="center">
                <th>STT</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>
                <th>Area</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <%var i = 0%>
            <% data.forEach((supp)=>{
                i++;
             %>
            <% 
            var city = '';
                if (supp.area == 'hcm')
                    city = "Tp Hồ Chí Minh";
                else city = "Hà Nội"; 
            %>
            <tr class="odd gradeX" align="center">
                <td><%-i%></td>
                <td><%-supp.name%></td>
                <td><%-supp.phone%></td>
                <td><%-supp.email%></td>
                <td><%-supp.address%></td>
                <td><%-city%></td>
                <td class="center">
                    <div class="btn-group">
                        <a href="/admin/supplier/edit/<%-supp._id%>" class="btn btn-warning"><i class="fas fa-edit"></i> Edit</a>
