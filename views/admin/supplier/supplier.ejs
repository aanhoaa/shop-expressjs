<% include ../../partials/header_admin %>

<div style="margin-left: 5%;">
    <div class="col-lg-12">
        <h1 class="page-header">Supplier
            <small>List</small>
            <div style="float: right;">
                <a href="{!! url('admin/supplier/add') !!}" class="btn btn-success" style="font-size: 18px;"><i class="fas fa-plus-square" style="margin-right: 5px;"></i> Thêm mới nhà cung cấp</a>
            </div>
        </h1>
    </div>
