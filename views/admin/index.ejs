            <% if (data) { var i = 0;%>
           <%data.forEach(item => { i++;%>
            <tr class="odd gradeX" align="center">
                <td><%-i%></td>
                <td><input type="checkbox" class="checkOne" name="ckbProduct" value="<%-item.id%>" onclick="checkOne()"></td>
                <td>
                   <div style="display: flex;">
                        <div class="show-img-product">
                            <img src="<%-item.classify[0].url.cover%>" alt="">
                            <div class="<%-item.status == 0? 'product-banned':''%>">
                                <i data-v-39f338ef="" class="shop-icon banned-icon"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M4 5V4a4 4 0 1 1 8 0v1h1a.99.99 0 0 1 .56.172A.998.998 0 0 1 14 6v8a.99.99 0 0 1-.172.56A.998.998 0 0 1 13 15H3a.99.99 0 0 1-.56-.172A.998.998 0 0 1 2 14V6a.99.99 0 0 1 .172-.56A.998.998 0 0 1 3 5h1zm3.154 5.239l.276 2.225a.611.611 0 0 0 .606.536.6.6 0 0 0 .597-.537l.238-2.241a1.5 1.5 0 1 0-1.717.017zM8 2a2 2 0 0 0-2 2v1h4V4a2 2 0 0 0-2-2z"></path></svg></i>
                            </div>
                        </div>
                        <div class="info-product">
                            <div class="info-status">
                                <%-item.status == 0?'<p class="hidden-product">Đã ẩn</p>': '<p class="show-product">Đang bán</p>'%>
                            </div>
                            <div>
                                <p><%-item.name%></p>
                            </div>
                            <div class="sku-product">
                                <p>SKU sản phẩm:  <%-item.sku==''?'--':item.sku%></p>
                            </div>
                        </div>
                   </div>
                </td>
                <td>
                  <%if (item.classify) {%>
                   <%item.classify.forEach(it => {%>
                        <div>
                            <p><%-it.sku == ''?'--':it.sku%></p>
                        </div>
                    <%})%>
                  <%}%>
                </td>
                <td> 
                    <%if (item.classify) {%>
                    <%item.classify.forEach(it => {%>
                        <div>
                            
                            <% if (it.attribute.key) {%>
                                <p>--</p>
                            <%} else if (it.attribute.Color && !it.attribute.Size){%>
                                <p><%-it.attribute.Color%></p>
                            <%} else if (!it.attribute.Color && it.attribute.Size) {%>
                                <p><%-it.attribute.Size%></p>
                            <%} else {%>
                                <p><%-it.attribute.Color%>, <%-it.attribute.Size%></p>
                            <%}%>
                        </div>
                    <%})%>
                    <%}%>
                </td>
                <td>
                    <%if (item.classify) {%>
                    <%item.classify.forEach(it => {%>
                        <div>
                            <p><%-it.price%> đ</p>
                        </div>
                    <%})%>
                    <%}%>
                </td>
                <td>
                    <%if (item.classify) {%>
                    <%item.classify.forEach(it => {%>
                        <div style="margin-bottom: 16px;">
                            <%-it.stockamount==0?'<p class="out-stock">Hết hàng</p>':it.stockamount%>
                        </div>
                    <%})%>
                    <%}%>
                </td>
                <td>
                    <div>
                        <%-item.status == 0?'<p class="hidden-product">Đã ẩn</p>': '<p class="show-product">Đang bán</p>'%>
