            <div id="insertImage"></div>
            <button type="button" id="addImages" class="btn btn-danger" style="margin-bottom: 10px;">Add Images</button>
             
            <div id="insertSize">
                <div class="form-group">
                    <label>Size</label>
                    <input type="text" value="<%-size%>" data-role="tagsinput" name='size' id="size-opt"/>
                </div>
            </div>

            <div id="insertColor">
                <div class="">
                    <label>Color</label>
                    <input type="text" value="<%-color%>" data-role="tagsinput" name='color'/>
                </div>
            </div>
            
        </div>
    </form>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/typeahead.js/0.11.1/typeahead.bundle.min.js"></script>
<script src="/javascripts/assets/bootstrap-tagsinput.min.js"></script>
<script src="/javascripts/js/admin/changeInfoVariant.js"></script>
<script>
    function readMainURL(input) {
       if (input.files && input.files[0]) {
           var reader = new FileReader();

           reader.onload = function (e) {
               $('#blah')
                .attr('src', e.target.result);
           };

           reader.readAsDataURL(input.files[0]);
       }
   }
</script>

